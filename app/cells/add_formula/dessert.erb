<div class="add-formula dessert">
    <header>
        <h5 class="title -compact -faint"><%= I18n.t("menu.dessert.title") %>:</h5>
        <h5 class="choice"><%= @desserts.first.name %></h5>
    </header>
    <div class="item">
        <% @desserts.each do |d| %>
            <%= @f.radio_button :dessert, d.id, :checked => (d == @dessert) %>
            <label for="formula_dessert_<%= d.id %>" title="<%= d.name %>">
                <div class="img">
                    <%= image_tag d.img_url %>
                </div>
                <h6><%= d.name %></h6>
            </label>
        <% end %>
    </div>
</div>
