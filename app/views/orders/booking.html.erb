<section class="-darker">
    <div class="row align -center">
        <%= form_tag order_booking_path, method: :patch do %>
            <h2 class="title -alt">Valider votre commande</h2>
            <div class="col-12 booking">
                <h3 class="subtitle">Commandez-vous en groupe ou seul?</h3>
                <div class="booking-form-item">
                    <input id="service_seul" type="radio" name="grouped?" class="hidden" checked>
                    <label for="service_seul">Seul</label>
                    <input id="service_groupe" type="radio" name="grouped?" class="hidden">
                    <label for="service_groupe">Groupe</label>
                    <div id="group">
                        <p class="subtitle">Combien de personnes mangent avec vous?</p>
                        <div class="select">
                            <select id="monselect" name="order[number_persons]">
                                <option value="2">2 personnes</option>
                                <option value="3">3 personnes</option>
                                <option value="4">4 personnes</option>
                                <option value="5">5 personnes</option>
                                <option value="6">6 personnes</option>
                                <option value="7">7 personnes</option>
                                <option value="8">8 personnes</option>
                                <option value="9">9 personnes</option>
                                <option value="10">10 personnes</option>
                            </select>
                             <%= fa_icon "angle-down" %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 booking">
                <h3 class="subtitle">Choisissez l'heure à laquelle vous voulez venir manger</h3>
                <div class="booking-form-item">
                    <% @services.each do |s| %>
                        <input  id="service_<%= s.id %>" value="<%= s.id %>" type="radio" name="order[service_id]" class="hidden">
                        <label for="service_<%= s.id %>"><%= s.start_time.strftime("%H:%M") %></label>
                    <% end %>
                </div>
            </div>
            <div class="col-12 booking">
                <%= button_tag type: :submit, class: "btn -big" do %>
                    Valider ma commande <%= fa_icon "check" %>
                <% end %>
            </div>
        <% end %>
        <div class="col-6">
            <h5 class="title">Récapitulatif</h5>
            <%= cell(:cart, @order) %>
        </div>
    </div>
</section>
