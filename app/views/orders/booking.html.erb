<section class="-darker">
    <div class="row align -center">
        <%= form_tag order_booking_path, method: :patch do %>
            <h2 class="title -alt">Validez votre commande</h2>
            <div class="col-12 booking">
                <div class="booking-form-item">
                    <h5 class="subtitle">Quel nom voulez-vous donner à votre commande ?</h5>
                    <input type="text" class="" placeholder="Votre nom" name="order[name]">
                    <p class="text -tiny">Utilisez ce nom pour récupérer votre commande</p>
                    <br />
                </div>
            </div>
            <div class="col-12 booking">
                <div class="booking-form-item">
                    <h5 class="subtitle">Commandez-vous seul ou en groupe ?</h5>
                    <input id="service_seul" type="radio" name="grouped?" class="hidden" checked>
                    <label for="service_seul">Seul</label>
                    <input id="service_groupe" type="radio" name="grouped?" class="hidden">
                    <label for="service_groupe">Groupe</label>
                    <div class="option" id="seul">
                        <p class="subtitle">Vous souhaitez rejoindre un ami ? Entrez son nom de commande:</p>
                        <input id="group_name" type="text" name="group_name" placeholder="" />
                        <p class="text -tiny pink">Votre ami doit déjà avoir validé sa commande</p>
                    </div>
                    <div class="option" id="group">
                        <p class="subtitle">Combien de personnes mangent avec vous ?</p>
                        <div class="select">
                            <select id="monselect" name="order[number_persons]">
                                <% (2..10).each do |i| %>
                                    <option value="<%= i %>"><%= i %> personnes</option>
                                <% end %>
                            </select>
                             <%= fa_icon "angle-down" %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 booking">
            </div>
            <div class="col-12 booking">
                <div class="booking-form-item">
                    <h5 class="subtitle">À quelle heure voulez-vous manger ?</h5>
                    <% @services.each do |s| %>
                        <input  id="service_<%= s.id %>" value="<%= s.id %>" type="radio" name="order[service_id]" class="hidden">
                        <label for="service_<%= s.id %>"><%= s.start_time.strftime("%H:%M") %></label>
                    <% end %>
                </div>
            </div>
            <div class="col-12 booking">
                <%= button_tag type: :submit, class: "btn -big", data: {confirm: "Vous ne pourrez plus modifier votre commande aprés cette étape, êtes-vous sûr de vouloir continuer ?"} do %>
                    Valider ma commande <%= fa_icon "check" %>
                <% end %>
            </div>
        <% end %>
    </div>
</section>
