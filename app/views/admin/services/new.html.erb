<section>
    <div class="row">
        <div class="col-12">
            <h1><%= I18n.t("admin.service.add") %></h1>

            <%= form_for :service, :url => '/admin/services' do |form| %>

                <p>
                    <%= form.label :start_time %><br>
                    <div class="select -multiple">
                        <%= form.datetime_select :start_time, start_year: Time.current.year, default: @meal.start_time %>
                    </div>
                </p>
                <p>
                    <%= form.label :end_time %><br>
                    <div class="select -multiple">
                        <%= form.datetime_select :end_time, start_year: Time.current.year, default: @meal.end_time %>
                    </div>
                </p>
                <p>
                    <%= form.label :seats %><br>
                    <%= form.number_field :seats %>
                </p>

                    <%= form.hidden_field :meal_id, value: @meal.id %>

                <p>
                    <%= form.button class: "btn" do %>
                        <%= I18n.t("admin.create") %> <%= fa_icon "plus" %>
                    <% end %>
                </p>
                <% end %>
        </div>
    </div>
</section>
